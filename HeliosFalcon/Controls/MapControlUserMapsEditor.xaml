        <Label Grid.Column="2" Grid.Row="2" FontSize="10" HorizontalAlignment="Right">
            <Label.ToolTip>When checked set 128 segment size for the user defined map</Label.ToolTip> Size 128
        </Label>
        <CheckBox Grid.Column="3" Grid.Row="2" Margin="1,4,-7,4" IsChecked="{Binding Control.UserMapSize_201, Mode=TwoWay}" />

